{
	"name": "Dupbit Extension",
	"description": "Interact with Dupbit",
	"icons": {
        "64": "images/favicon@64px.png",
        "128": "images/favicon@128px.png",
        "256": "images/favicon@256px.png"
	},
	"version": "1.2.0",
	"manifest_version": 2,
	"background": {
		"scripts": [ "src/actions.js", "src/request.js", "src/websocket.js", "background.js" ]
	},
    "content_scripts": [
        {
            "matches": ["*://*.youtube.com/*"],
            "js": ["src/inject/youtube.js"]
        }
    ],
	"browser_action": {
		"default_icon": "images/favicon@64px.png",
		"default_title": "Dupbit Extension",
		"default_popup": "popup.html"
	},
	"permissions": [ "*://*/*", "tabs", "downloads","activeTab","webRequest", "storage" ]
}
